{
  "name": "solid-fsm",
  "version": "1.0.5",
  "description": "Finite State Machine with a simple fluent API",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "_mocha -r ts-node/register --recursive test/**/*Test.ts",
    "coverage": "nyc mocha -r ts-node/register -r source-map-support/register --recursive test/**/*Test.ts",
    "clean": "node ./node_modules/rimraf/bin.js ./lib",
    "npm:build": "node ./node_modules/typescript/bin/tsc --sourcemap false",
    "npm:publish": "npm run clean && npm run npm:build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolddp/solid-fsm.git"
  },
  "keywords": [
    "fsm",
    "finite",
    "state",
    "machine"
  ],
  "author": "Daniel Persson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bolddp/solid-fsm/issues"
  },
  "files": [
    "/lib",
    "README.md"
  ],
  "homepage": "https://github.com/bolddp/solid-fsm#readme",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.4",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.8",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "mocha": "9.1.3",
    "nyc": "14.1.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.12",
    "ts-node": "8.3.0",
    "typescript": "4.4.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "lib/",
      "coverage/",
      "**/*.d.ts",
      "test/"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  }
}
